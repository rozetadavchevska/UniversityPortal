@model UniversityPortal.Models.Student

@{
    ViewData["Title"] = "Add New Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #F1F0E8;
        color: #213555;
    }

    .profile-title {
        text-align: center;
        margin-top: 30px;
    }

        .profile-title h2 {
            font-size: 2rem;
            font-weight: bold;
            color: #213555;
        }

    .info-card {
        background-color: #ffffff;
        border-radius: 12px;
        padding: 30px;
        margin-top: 30px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.05);
    }

    .form-group label {
        font-weight: 600;
        color: #3E5879;
    }

    .form-group input {
        border-radius: 6px;
    }

    .btn-custom {
        background-color: #213555;
        color: #F1F0E8;
        border: none;
        padding: 8px 18px;
        transition: background-color 0.3s ease;
        font-size: 0.95rem;
    }

        .btn-custom:hover {
            background-color: #3E5879;
            color: #F1F0E8;
        }

    .btn-cancel {
        margin-left: 10px;
    }

    .back-link {
        display: inline-block;
        margin-top: 20px;
        color: #213555;
        text-decoration: none;
    }

        .back-link:hover {
            text-decoration: underline;
            color: #3E5879;
        }
</style>

<div class="container">
    <div class="profile-title">
        <h2>Add New Student</h2>
    </div>

    <div class="info-card">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="StudentId" class="form-label"></label>
                <input asp-for="StudentId" class="form-control" />
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Email</label>
                <input type="email" name="email" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Password</label>
                <input type="password" name="password" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label asp-for="EnrollmentDate" class="form-label"></label>
                <input asp-for="EnrollmentDate" class="form-control" type="date" />
                <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AcquiredCredits" class="form-label"></label>
                <input asp-for="AcquiredCredits" class="form-control" />
                <span asp-validation-for="AcquiredCredits" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CurrentSemester" class="form-label"></label>
                <input asp-for="CurrentSemester" class="form-control" />
                <span asp-validation-for="CurrentSemester" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="EducationLevel" class="form-label"></label>
                <input asp-for="EducationLevel" class="form-control" />
                <span asp-validation-for="EducationLevel" class="text-danger"></span>
            </div>

            <div class="form-group d-flex">
                <input type="submit" value="Create Student" class="btn btn-custom" />
                <a asp-action="Index" class="btn btn-outline-secondary btn-cancel">Cancel</a>
            </div>
        </form>
    </div>

    <a asp-action="Index" class="back-link">← Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
