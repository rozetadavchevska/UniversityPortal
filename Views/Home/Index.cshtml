@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="fw-bold">Welcome to the University Portal</h1>
            <p class="text-muted">Manage everything from one place: Students, Teachers, Courses, and Enrollments.</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-3">
            <div class="card text-center p-3">
                <i class="fas fa-user-graduate fa-2x text-primary mb-2"></i>
                <h5>Students</h5>
                <p>Manage student records</p>
                <a href="/Students" class="btn btn-outline-primary btn-sm">Go</a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center p-3">
                <i class="fas fa-chalkboard-teacher fa-2x text-success mb-2"></i>
                <h5>Teachers</h5>
                <p>Manage teaching staff</p>
                <a href="/Teachers" class="btn btn-outline-success btn-sm">Go</a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center p-3">
                <i class="fas fa-book fa-2x text-warning mb-2"></i>
                <h5>Courses</h5>
                <p>Manage course offerings</p>
                <a href="/Courses" class="btn btn-outline-warning btn-sm">Go</a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center p-3">
                <i class="fas fa-file-alt fa-2x text-danger mb-2"></i>
                <h5>Enrollments</h5>
                <p>Track student enrollments</p>
                <a href="/Enrollments" class="btn btn-outline-danger btn-sm">Go</a>
            </div>
        </div>
    </div>
</div>
