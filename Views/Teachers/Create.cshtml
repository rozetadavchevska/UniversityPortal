@model UniversityPortal.Models.Teacher

@{
    ViewData["Title"] = "Add New Teacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #F1F0E8;
        color: #213555;
    }

    .profile-title {
        text-align: center;
        margin-top: 30px;
    }

        .profile-title h2 {
            font-size: 2rem;
            font-weight: bold;
            color: #213555;
        }

    .info-card {
        background-color: #ffffff;
        border-radius: 12px;
        padding: 30px;
        margin-top: 30px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.05);
    }

    .form-group label {
        font-weight: 600;
        color: #3E5879;
    }

    .form-group input {
        border-radius: 6px;
    }

    .btn-custom {
        background-color: #213555;
        color: #F1F0E8;
        border: none;
        padding: 8px 18px;
        transition: background-color 0.3s ease;
        font-size: 0.95rem;
    }

        .btn-custom:hover {
            background-color: #3E5879;
            color: #F1F0E8;
        }

    .btn-cancel {
        margin-left: 10px;
    }
</style>

<div class="container">
    <div class="profile-title">
        <h2>Add New Teacher</h2>
    </div>

    <div class="info-card">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="ProfileImageUrl" class="control-label"></label>
                <input asp-for="ProfileImageUrl" type="file" id="ProfileImage" name="ProfileImage" class="form-control" accept=".jpg, .jpeg, .png" />
                <span asp-validation-for="ProfileImageUrl" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Email</label>
                <input type="email" name="email" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label>Password</label>
                <input type="password" name="password" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Degree"></label>
                <input asp-for="Degree" class="form-control" />
                <span asp-validation-for="Degree" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AcademicRank"></label>
                <input asp-for="AcademicRank" class="form-control" />
                <span asp-validation-for="AcademicRank" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="OfficeNumber"></label>
                <input asp-for="OfficeNumber" class="form-control" />
                <span asp-validation-for="OfficeNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="HireDate"></label>
                <input asp-for="HireDate" class="form-control" type="date" />

                <span asp-validation-for="HireDate" class="text-danger"></span>
            </div>

            <div class="form-group d-flex">
                <input type="submit" value="Create Teacher" class="btn btn-custom" />
                <a asp-action="Index" class="btn btn-outline-secondary btn-cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
