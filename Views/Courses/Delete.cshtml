@model UniversityPortal.Models.Course

@{
    ViewData["Title"] = "Delete Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #F1F0E8;
        color: #213555;
    }

    .profile-title {
        text-align: center;
        margin-top: 30px;
    }

        .profile-title h2 {
            font-size: 2rem;
            font-weight: bold;
            color: #213555;
        }

    .info-card {
        background-color: #ffffff;
        border-radius: 12px;
        padding: 30px;
        margin-top: 30px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.05);
    }

    dt {
        font-weight: 600;
        color: #3E5879;
    }

    .btn-danger {
        background-color: #d9534f;
        border-color: #d43f3a;
        color: white;
        transition: background-color 0.3s ease;
        margin-right: 10px;
    }

        .btn-danger:hover {
            background-color: #c9302c;
        }

    .btn-outline-secondary {
        color: #213555;
        border-color: #213555;
    }

        .btn-outline-secondary:hover {
            background-color: #213555;
            color: #F1F0E8;
        }
</style>

<div class="container">
    <div class="profile-title">
        <h2>Delete Course</h2>
    </div>

    <div class="info-card">
        <h4 class="mb-3">Are you sure you want to delete this course?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Title)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Credits)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Credits)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Semester)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Semester)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Programme)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Programme)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EducationLevel)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.EducationLevel)</dd>

            <dt class="col-sm-3">First Teacher</dt>
            <dd class="col-sm-9">@($"{Model.FirstTeacher?.FirstName} {Model.FirstTeacher?.LastName}")</dd>

            <dt class="col-sm-3">Second Teacher</dt>
            <dd class="col-sm-9">@($"{Model.SecondTeacher?.FirstName} {Model.SecondTeacher?.LastName}")</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </form>
    </div>
</div>
