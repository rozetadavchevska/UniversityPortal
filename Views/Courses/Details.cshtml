@model UniversityPortal.Models.Course

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #F1F0E8;
        color: #213555;
    }

    .profile-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 30px;
        flex-wrap: wrap;
        gap: 10px;
    }

    .profile-title {
        flex: 1;
        text-align: center;
    }

        .profile-title h1 {
            font-size: 2.2rem;
            font-weight: bold;
            margin: 0;
            color: #213555;
        }

    .left-action,
    .right-action {
        flex: 0 0 auto;
    }

    .btn-custom {
        background-color: #213555;
        color: #F1F0E8;
        border: none;
        padding: 8px 18px;
        transition: background-color 0.3s ease;
        font-size: 0.95rem;
    }

        .btn-custom:hover {
            background-color: #3E5879;
            color: #F1F0E8;
        }

    .info-card {
        background-color: #ffffff;
        border-radius: 12px;
        padding: 30px;
        margin-top: 30px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.05);
    }

    .info-list dt {
        font-weight: 600;
        color: #3E5879;
        width: 180px;
    }

    .info-list dd {
        margin-bottom: 15px;
    }

    .teachers-section {
        margin-top: 40px;
    }

    .teacher-item {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 12px 20px;
        margin-bottom: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 2px 6px rgba(0,0,0,0.03);
    }

    .teacher-link {
        text-decoration: none;
        color: #213555;
        font-weight: 500;
    }

        .teacher-link:hover {
            text-decoration: underline;
            color: #3E5879;
        }

    .badge-role {
        font-size: 0.8rem;
        padding: 6px 12px;
        border-radius: 50px;
    }

    .students-section {
        margin-top: 40px;
    }

    .student-item {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 12px 20px;
        margin-bottom: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.03);
    }

    .student-link {
        text-decoration: none;
        color: #213555;
        font-weight: 500;
    }

        .student-link:hover {
            text-decoration: underline;
            color: #3E5879;
        }

</style>

<div class="container">
    <div class="profile-header">
        <div class="left-action">
            <a asp-action="Index" class="btn btn-outline-secondary">← Back</a>
        </div>
        <div class="profile-title">
            <h1>@Model.Title</h1>
        </div>
        <div class="right-action">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-custom"><i class="fas fa-edit"></i> Edit</a>
        </div>
    </div>

    <div class="info-card">
        <dl class="row info-list">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Credits)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Credits)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Semester)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Semester)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Programme)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Programme)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EducationLevel)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.EducationLevel)</dd>
        </dl>
    </div>

    <div class="teachers-section">
        <h4 >Assigned Teachers</h4>

        @if (Model.FirstTeacher != null)
        {
            <div class="teacher-item">
                <a asp-controller="Teachers" asp-action="Details" asp-route-id="@Model.FirstTeacher.Id" class="teacher-link">
                    @Model.FirstTeacher.FirstName @Model.FirstTeacher.LastName
                </a>
                <span class="badge bg-primary badge-role">Lead Instructor</span>
            </div>
        }
        @if (Model.SecondTeacher != null)
        {
            <div class="teacher-item">
                <a asp-controller="Teachers" asp-action="Details" asp-route-id="@Model.SecondTeacher.Id" class="teacher-link">
                    @Model.SecondTeacher.FirstName @Model.SecondTeacher.LastName
                </a>
                <span class="badge bg-secondary badge-role">Co-Instructor</span>
            </div>
        }
        @if (Model.FirstTeacher == null && Model.SecondTeacher == null)
        {
            <p class="text-muted mt-3">No teachers have been assigned to this course yet.</p>
        }
    </div>

    <div class="students-section">
        <h4>Enrolled Students</h4>

        @if (Model.Enrollments != null && Model.Enrollments.Any())
        {
            <div class="row">
                @foreach (var enrollment in Model.Enrollments)
                {
                    <div class="col-md-6">
                        <div class="student-item">
                            <a asp-controller="Students" asp-action="Details" asp-route-id="@enrollment.Student.Id" class="student-link">
                                @enrollment.Student.FirstName @enrollment.Student.LastName
                            </a>
                            <span class="badge bg-secondary badge-role">@enrollment.Semester, @enrollment.Year</span>
                        </div>
                    </div>
                }
            </div>

        }
        else
        {
            <p class="text-muted mt-3">No students enrolled in this course yet.</p>
        }
    </div>


</div>
