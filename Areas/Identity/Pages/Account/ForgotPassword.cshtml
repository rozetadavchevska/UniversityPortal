@page
@model ForgotPasswordModel

@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <section class="card shadow-sm p-4 custom-card">
                <form method="post">
                    <h2 class="text-center mb-4 login-title">Forgot your password?</h2>
                    <p class="text-center text-muted mb-4">Enter your email to receive a password reset link.</p>
                    <hr />

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="w-100 btn btn-lg login-btn">Reset Password</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .custom-card {
        background-color: #FFFFFF;
    }

    .login-title {
        color: #213555;
    }

    .login-btn {
        background-color: #213555;
        color: #fff;
    }

        .login-btn:hover {
            background-color: #3E5879;
            color: #fff;
        }

    .form-label {
        color: #495057;
    }
</style>
